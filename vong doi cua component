  <body>
    <div id="app">
      <p>{{a}}</p>
    </div>
  </body>
  <script>
  new Vue({
      el: "#app",
      data() {
             return{
              a: 'thang'  
             }
         
      },
    
      beforeCreate: function(){
            console.log('hoho');
      },
      created: function() {
        console.log(this.a);
      },
 

      beforeMount: function() {
        console.log(`this.$el `);
      
      },
      mounted: function() {
        console.log(this.$el.textContent);
    
      },

      beforeUpdate: function() {  
        console.log(this.a);
      },
      updated: function() {

           console.log(this.$el);
      },
      beforeDestroy: function(){
      console.log(this.a);
      },
      destroyed: function(){
        console.log(this.a);
      }
 
    });
  </script>
